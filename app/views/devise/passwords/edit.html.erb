<%= stylesheet_link_tag "login", :media => "all" %>

<div class="container">
  <div class="form-signin">
    <h2 class="form-signin-heading">Change your password</h2>

    <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, :as => :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <%= f.input :password, :label => "New password", :required => true, :autofocus => true, :class => "form-control" %>
        <%= f.input :password_confirmation, :label => "Confirm your new password", :required => true, :class => "form-control" %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Change my password", :class => "btn btn-lg btn-primary" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
